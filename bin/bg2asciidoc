	def element_link(self, thisElement):
		dest = thisElement.getAttribute("dest")
		self.out("<<%s," % (dest))
		self.process(thisElement)
		self.out(">>")

	def element_ulink(self, thisElement):
		url = thisElement.getAttribute("url")
		self.out("%s[" % url);
		self.process(thisElement)
		self.out("]")

	def element_code(self, thisElement):
		self.out('-------------------------------')
		self.process(thisElement)
